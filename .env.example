# =================================
# AI Voice Assistant Configuration
# =================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id_here
ELEVENLABS_MODEL_ID=eleven_multilingual_v2

# ngrok Configuration
NGROK_URL=https://your-ngrok-url.ngrok.io
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_ENV=production

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/voice_assistant
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_and_sessions
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Voice Processing Configuration
SPEECH_RECOGNITION_TIMEOUT=10
SPEECH_RECOGNITION_PHRASE_TIMEOUT=3
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav

# RAG Configuration
VECTOR_DATABASE_URL=your_vector_db_url_here
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MAX_CONTEXT_LENGTH=4000
SIMILARITY_THRESHOLD=0.7

# Monitoring & Analytics
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_ENABLED=true

# Feature Flags
ENABLE_RAG=true
ENABLE_CONVERSATION_MEMORY=true
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_MULTILINGUAL=false

# Performance Configuration
MAX_CONCURRENT_CALLS=100
RESPONSE_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=3600
MAX_CONVERSATION_LENGTH=50

# Development Configuration
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_LOGGING=false
SAVE_CONVERSATION_LOGS=true
AUDIO_CACHE_ENABLED=true